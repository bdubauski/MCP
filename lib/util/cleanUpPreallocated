#!/usr/bin/env python3
import os

os.environ.setdefault( 'DJANGO_SETTINGS_MODULE', 'mcp.settings' )

import django
django.setup()

import time
from mcp.Resource.models import DynamicResourceInstance


for instance in DynamicResourceInstance.objects.filter( buildjob__isnull=True, buildjobresourceinstance__state='built' ):
  print( 'Telling contractor to release "{0}"'.format( instance ) )
  instance.release()


while True:
  print( '{0} Instances remaning'.format( DynamicResourceInstance.objects.filter( buildjob__isnull=True ).count() ) )
  for instance in DynamicResourceInstance.objects.filter( buildjob__isnull=True, state='released' ):
    print( 'Deleting Instance "{0}"'.format( instance ) )
    instance.delete()

  if DynamicResourceInstance.objects.filter( buildjob__isnull=True, state='releasing' ).count() == 0:
    break

  time.sleep( 30 )

print( 'Done!' )
